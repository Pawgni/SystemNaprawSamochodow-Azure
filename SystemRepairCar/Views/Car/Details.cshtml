@model SystemRepairCar.Models.Car

@{
    ViewData["Title"] = "Car Details";
}

<div class="container">
    <h1 class="mt-4">Car Details</h1>
    <div class="card mb-4">
        <div class="card-body">
            <h4 class="card-title">@Model.Name Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    <strong>Name:</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    <strong>Model:</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Model)
                </dd>

                <dt class="col-sm-3">
                    <strong>Year:</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Year)
                </dd>

                <dt class="col-sm-3">
                    <strong>Type:</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Type)
                </dd>

                @if (Model.Type.ToLower() == "electric")
                {
                    <dt class="col-sm-3">
                        <strong>Battery Capacity:</strong>
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => ((ElectricCar)Model).BatteryCapacity)
                    </dd>
                }
                else if (Model.Type.ToLower() == "gasoline")
                {
                    <dt class="col-sm-3">
                        <strong>Fuel Capacity:</strong>
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => ((GasolineCar)Model).FuelCapacity)
                    </dd>
                }

                <dt class="col-sm-3">
                    <strong>Image:</strong>
                </dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.Image))
                    {
                        <img src="@Model.Image" alt="@Model.Name" class="img-thumbnail" style="max-width: 300px; max-height: 300px;" />
                    }
                    else
                    {
                        <span>No image available</span>
                    }
                </dd>

                <dt class="col-sm-3">
                    <strong>Created At:</strong>
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedAt)
                </dd>
            </dl>
        </div>
    </div>
    <div>
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>
</div>
